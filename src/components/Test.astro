---
import sillyGuyEyesOpenMouthClosed from "../assets/silly-guy/eyes_open_mouth_closed.png";
import sillyGuyEyesOpenMouthOpen from "../assets/silly-guy/eyes_open_mouth_open.png";
import sillyGuyEyesClosedMouthClosed from "../assets/silly-guy/eyes_closed_mouth_closed.png";
import sillyGuyEyesClosedMouthOpen from "../assets/silly-guy/eyes_closed_mouth_open.png";
import { getImage, Image } from "astro:assets";

const optimizedSillyGuyEyesOpenMouthClosed = await getImage({
  src: sillyGuyEyesOpenMouthClosed,
  format: "webp",
});
const optimizedSillyGuyEyesOpenMouthOpen = await getImage({
  src: sillyGuyEyesOpenMouthOpen,
  format: "webp",
});
const optimizedSillyGuyEyesClosedMouthClosed = await getImage({
  src: sillyGuyEyesClosedMouthClosed,
  format: "webp",
});
const optimizedSillyGuyEyesClosedMouthOpen = await getImage({
  src: sillyGuyEyesClosedMouthOpen,
  format: "webp",
});
---

