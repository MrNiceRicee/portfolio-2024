  <p>Astro Get Image</p>
  <img
    src={optimizedSillyGuyEyesOpenMouthClosed.src}
    alt="Joshua Constantine Santos"
    class="rounded-full w-32 h-32 fixed -bottom-[1px] -right-4 object-cover xs:relative xs:bottom-1.5 xs:right-2 xs:mb-[-1.1rem] xs:ml-[10.4rem] z-[1] transition-all duration-300 ease-in-out"
  />
  <img
    src={optimizedSillyGuyEyesOpenMouthOpen.src}
    alt="Joshua Constantine Santos"
    class="rounded-full w-32 h-32 fixed -bottom-[1px] -right-4 object-cover xs:relative xs:bottom-1.5 xs:right-2 xs:mb-[-1.1rem] xs:ml-[10.4rem] z-[1] transition-all duration-300 ease-in-out"
  />
  <img
    src={optimizedSillyGuyEyesClosedMouthClosed.src}
    alt="Joshua Constantine Santos"
    class="rounded-full w-32 h-32 fixed -bottom-[1px] -right-4 object-cover xs:relative xs:bottom-1.5 xs:right-2 xs:mb-[-1.1rem] xs:ml-[10.4rem] z-[1] transition-all duration-300 ease-in-out"
  />
  <img
    src={optimizedSillyGuyEyesClosedMouthOpen.src}
    alt="Joshua Constantine Santos"
